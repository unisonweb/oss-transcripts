docs.fundamentals.abilities.exercises.ex2.answers.averageOfRange :
  Nat ->{Store [Nat]} Float
docs.fundamentals.abilities.exercises.ex2.answers.averageOfRange n =
  use Float / fromNat
  use List +:
  use Nat + ==
  go = cases
    i
      | i == n    ->
